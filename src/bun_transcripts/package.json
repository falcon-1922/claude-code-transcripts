{
  "name": "bun-transcripts",
  "version": "0.1.0",
  "description": "Convert Claude Code session JSON to mobile-friendly HTML pages",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "bun-transcripts": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "test": "bun test",
    "build": "bun build src/index.ts --compile --outfile=bun-transcripts",
    "typecheck": "bun run tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "marked": "^15.0.0",
    "picocolors": "^1.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
